<style>
  footer {
    padding: 0 20px;
  }

  footer .container {
    border: var(--secondary-color) 1px solid;
    border-radius: var(--border-radius);
    position: relative;
    margin-top: 50px;
    align-items: center;
  }

  footer .group {
    text-align: center;
    align-items: center;
    gap: 0;
    margin-bottom: 5rem;
    p {
      font-size: 14px;
      color: var(--secondary-color);
    }
    h2 {
      font-size: 5rem;
      width: 100%;
      line-height: 5rem;

      @media (max-width: 768px) {
        font-size: 3.5rem;
        line-height: 3.5rem;
      }
    }
  }

  footer .btns {
    justify-content: end;
    flex-wrap: wrap;
    width: 80%;
  }

  @media (max-width: 400px) {
    footer .btns {
      justify-content: start;
    }
  }

  footer img {
    position: absolute;
    left: 0;
    top: 8rem;
    height: 200px;
    width: auto;
    pointer-events: none;
    z-index: 1;
  }

  footer .copyright {
    justify-content: space-between;
    padding: 1rem 0;
    font-size: 0.875rem;
    color: var(--secondary-color);
  }
</style>
