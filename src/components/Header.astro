---
import logo from "../assets/logo.png";
import logoAlt from "../assets/logo-alt.png";
import logo_s from "../assets/logo_s.png";
import logoAlt_s from "../assets/logo-alt_s.png";
---

<header>
  <div class="flex wrapper">
    <a class="logo" href="/" aria-label="til forside"
      ><img src={logo.src} alt="forside" /></a
    >
    <a class="logo-alt" href="/" aria-label="til forside"
      ><img src={logoAlt.src} alt="forside" /></a
    >
    <a class="logo_s" href="/" aria-label="til forside"
      ><img src={logo_s.src} alt="forside" /></a
    >
    <a class="logo-alt_s" href="/" aria-label="til forside"
      ><img src={logoAlt_s.src} alt="forside" /></a
    >
    <div class="flex">
      <nav>
        <ul class="flex">
          <li><a href="#projekter">projekter</a></li>
          <li><a href="#ui">ui</a></li>
          <li><a href="#færdigheder">færdigheder</a></li>
          <li><a href="#kontakt">kontakt</a></li>
        </ul>
      </nav>
    </div>
  </div>
</header>

<style>
  /* Header section */
  header {
    background-color: var(--header-bg-color);
    backdrop-filter: blur(10px);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
  }
  div {
    align-items: center;
  }
  .wrapper {
    justify-content: space-between;
    align-items: center;
    padding: 20px 20px;
  }
  img {
    max-height: 50px;
    transition: all 0.3s ease;
  }
  img:hover {
    transform: scale(1.1);
  }

  .logo,
  .logo_s {
    margin-left: -15px;
  }

  body[data-theme="dark"] .logo-alt,
  .logo_s,
  .logo-alt_s {
    display: none;
  }

  body[data-theme="dark"] .logo {
    display: block;
  }

  body[data-theme="light"] .logo-alt,
  .logo,
  .logo-alt_s {
    display: none;
  }

  body[data-theme="light"] .logo_s {
    display: block;
  }

  body[data-theme="dark"] {
    @media (max-width: 500px) {
      .logo {
        display: none !important;
      }
      .logo-alt {
        display: block !important;
      }
      ul {
        gap: 15px;
      }
    }
  }
  body[data-theme="light"] {
    @media (max-width: 500px) {
      .logo_s {
        display: none !important;
      }
      .logo-alt_s {
        display: block !important;
      }
      ul {
        gap: 15px;
      }
    }
  }

  ul {
    list-style: none;
  }

  a {
    color: var(--text-color);
  }

  li {
    transition: all 0.3s ease;
  }

  li:hover {
    transform: scale(1.1);
  }
</style>
