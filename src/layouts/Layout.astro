---
import "../style/style.css";
import "../style/theme-switcher.css";
const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Stars from "../components/Stars.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Velkommen til min digitale ansøgning. Jeg hedder Marcus Wagner, og jeg er en passioneret multimediedesigner med speciale i UX/UI og frontend-udvikling. Jeg søger en praktikplads, hvor jeg kan anvende mine færdigheder og bidrage til jeres team."
    />
    <title>{title}</title>
  </head>
  <body data-theme="dark">
    <div class="top-container">
      <div class="top-content">
        <div class="top-effect-wrapper">
          <div class="top-effect-ray-wrapper">
            <div class="top-effect-element"></div>
          </div>
        </div>
      </div>
    </div>
    <main>
      <Header />
      <slot />
      <Footer />
    </main>
    <Stars />
    <!-- <script src="../script/svgAnimation.js"></script> -->
    <script src="../script/theme.js"></script>
    <script src="../script/app.js"></script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }
</style>
