---
import "../style/style.css";
import "../style/theme-switcher.css";
const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body data-theme="dark">
    <div class="top-container">
      <div class="top-content">
        <div class="top-effect-wrapper">
          <div class="top-effect-ray-wrapper">
            <div class="top-effect-element"></div>
          </div>
        </div>
      </div>
    </div>
    <div id="particles-js"></div>
    <main>
      <Header />
      <slot />
      <Footer />
    </main>
    <!-- <script src="../script/svgAnimation.js"></script> -->
    <script src="../script/theme.js"></script>
    <script src="../script/app.js"></script>
    <script src="../../node_modules/particles.js"></script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  #particles-js {
    position: absolute;
    top: 0;
    right: 0;
    height: 100vh;
    width: 100vw;
  }
</style>
